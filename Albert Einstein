        function closeModal() {
            const modal = document.getElementById('discoveryModal');
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // TWIN PARADOX SIMULATION
        let twinInt = null;
        let eYears = 0;
        let sYears = 0;

        function startTwin() {
            if (twinInt) return;
            document.getElementById('twinBtn').disabled = true;
            document.getElementById('twinResult').textContent = '';
            
            // 30 seconds total
            // Space twin: 25 ‚Üí 30 (ages 5 years)
            // Earth twin: 25 ‚Üí 60 (ages 35 years)
            // Final: 60 is exactly DOUBLE 30!
            const updateInterval = 100; // update every 0.1 seconds
            const totalDuration = 30000; // 30 seconds
            const spaceYearsTotal = 5; // Space twin ages 5 years
            const earthYearsTotal = 35; // Earth twin ages 35 years (7x time dilation)
            const totalUpdates = totalDuration / updateInterval; // 300 updates
            const earthYearsPerUpdate = earthYearsTotal / totalUpdates;
            const spaceYearsPerUpdate = spaceYearsTotal / totalUpdates;
            
            twinInt = setInterval(() => {
                eYears += earthYearsPerUpdate;
                sYears += spaceYearsPerUpdate;
                document.getElementById('earthAge').textContent = (25 + eYears).toFixed(1);
                document.getElementById('earthTime').textContent = eYears.toFixed(1) + ' years';
                document.getElementById('spaceAge').textContent = (25 + sYears).toFixed(1);
                document.getElementById('spaceTime').textContent = sYears.toFixed(1) + ' years';
                
                if (eYears >= earthYearsTotal) {
                    clearInterval(twinInt);
                    twinInt = null;
                    document.getElementById('twinBtn').disabled = false;
                    const earthFinalAge = 25 + eYears;
                    const spaceFinalAge = 25 + sYears;
                    document.getElementById('twinResult').textContent = 
                        `üöÄ Journey Complete! The Earth twin is ${earthFinalAge.toFixed(0)} years old - exactly DOUBLE the space twin's age of ${spaceFinalAge.toFixed(0)} years! Time dilation made the space twin age ${(eYears / sYears).toFixed(1)}x slower!`;
                }
            }, updateInterval);
        }

        function resetTwin() {
            if (twinInt) { clearInterval(twinInt); twinInt = null; }
            eYears = 0;
            sYears = 0;
            document.getElementById('earthAge').textContent = '25';
            document.getElementById('earthTime').textContent = '0 years';
            document.getElementById('spaceAge').textContent = '25';
            document.getElementById('spaceTime').textContent = '0 years';
            document.getElementById('twinResult').textContent = '';
            document.getElementById('twinBtn').disabled = false;
        }

        // ORBITAL SIMULATION
        let canvas, ctx, masses = [], nextMass = 'small', animationId = null;

        function initOrbitSim() {
            canvas = document.getElementById('canvas');
            ctx = canvas.getContext('2d');
            masses = [];
            nextMass = 'small';
            
            canvas.addEventListener('click', (e) => {
                const rect = canvas.getBoundingClientRect();
                const x = (e.clientX - rect.left) * (canvas.width / rect.width);
                const y = (e.clientY - rect.top) * (canvas.height / rect.height);
                
                let r, c, mass, type;
                if (nextMass === 'small') {
                    r = 5; c = '#4ECDC4'; mass = 0.5; type = 'small';
                } else if (nextMass === 'medium') {
                    r = 15; c = '#FFD700'; mass = 10; type = 'medium';
                } else {
                    r = 25; c = '#FF6B6B'; mass = 100; type = 'large';
                }
                
                let vx = 0, vy = 0;
                if (type === 'small') {
                    const medium = masses.find(m => m.type === 'medium');
                    if (medium) {
                        const dx = x - medium.x, dy = y - medium.y;
                        const dist = Math.sqrt(dx * dx + dy * dy);
                        if (dist > 0) {
                            const speed = Math.sqrt(medium.mass * 2.0 / dist);
                            vx = -dy / dist * speed + (medium.vx || 0);
                            vy = dx / dist * speed + (medium.vy || 0);
                        }
                    }
                } else if (type === 'medium') {
                    const large = masses.find(m => m.type === 'large');
                    if (large) {
                        const dx = x - large.x, dy = y - large.y;
                        const dist = Math.sqrt(dx * dx + dy * dy);
                        if (dist > 0) {
                            const speed = Math.sqrt(large.mass * 0.8 / dist);
                            vx = -dy / dist * speed;
                            vy = dx / dist * speed;
                        }
                    }
                }
                
                masses.push({ x, y, vx, vy, r, c, mass, type, trail: [] });
                if (!animationId) animate();
            });
            
            ctx.fillStyle = '#000';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
        }

        function animate() {
            masses.forEach((m1) => {
                let ax = 0, ay = 0;
                masses.forEach((m2) => {
                    if (m1 === m2) return;
                    
                    // Apply gravity from ALL masses, not just hierarchical
                    const dx = m2.x - m1.x, dy = m2.y - m1.y;
                    const distSq = dx * dx + dy * dy, dist = Math.sqrt(distSq);
                    if (dist > m1.r + m2.r) {
                        // Universal gravitation - everything pulls on everything!
                        const force = m2.mass / distSq;
                        ax += force * dx / dist;
                        ay += force * dy / dist;
                    }
                });
                m1.vx += ax; m1.vy += ay;
                m1.vx *= 0.998; m1.vy *= 0.998;
                m1.x += m1.vx; m1.y += m1.vy;
                if (m1.x < -50) m1.x = canvas.width + 50;
                if (m1.x > canvas.width + 50) m1.x = -50;
                if (m1.y < -50) m1.y = canvas.height + 50;
                if (m1.y > canvas.height + 50) m1.y = -50;
            });
            
            ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // DRAW SPACETIME GRID - SHOWS EINSTEIN'S CURVED SPACETIME!
            ctx.strokeStyle = '#00ffff';
            ctx.lineWidth = 0.5;
            ctx.globalAlpha = 0.4;
            const gridSize = 50;
            
            // Vertical grid lines that bend near masses
            for (let x = 0; x <= canvas.width; x += gridSize) {
                ctx.beginPath();
                for (let y = 0; y <= canvas.height; y += 5) {
                    let offsetX = 0;
                    
                    // Calculate how much spacetime is curved at this point
                    masses.forEach(m => {
                        const dx = x - m.x;
                        const dy = y - m.y;
                        const dist = Math.sqrt(dx * dx + dy * dy) + 1;
                        
                        // Bigger mass = bigger curve! (Einstein's key idea)
                        const curvature = (m.r * m.mass * 0.15) / dist;
                        offsetX += (dx / dist) * curvature;
                    });
                    
                    if (y === 0) {
                        ctx.moveTo(x + offsetX, y);
                    } else {
                        ctx.lineTo(x + offsetX, y);
                    }
                }
                ctx.stroke();
            }
            
            // Horizontal grid lines that bend near masses
            for (let y = 0; y <= canvas.height; y += gridSize) {
                ctx.beginPath();
                for (let x = 0; x <= canvas.width; x += 5) {
                    let offsetY = 0;
                    
                    masses.forEach(m => {
                        const dx = x - m.x;
                        const dy = y - m.y;
                        const dist = Math.sqrt(dx * dx + dy * dy) + 1;
                        
                        // Bigger mass = bigger curve!
                        const curvature = (m.r * m.mass * 0.15) / dist;
                        offsetY += (dy / dist) * curvature;
                    });
                    
                    if (x === 0) {
                        ctx.moveTo(x, y + offsetY);
                    } else {
                        ctx.lineTo(x, y + offsetY);
                    }
                }
                ctx.stroke();
            }
            
            ctx.globalAlpha = 1;
            
            // Draw masses with glow
            masses.forEach(m => {
                ctx.shadowColor = m.c; ctx.shadowBlur = 15;
                const grad = ctx.createRadialGradient(m.x - m.r * 0.3, m.y - m.r * 0.3, 0, m.x, m.y, m.r);
                grad.addColorStop(0, m.c); grad.addColorStop(1, '#000');
                ctx.fillStyle = grad;
                ctx.beginPath();
                ctx.arc(m.x, m.y, m.r, 0, Math.PI * 2);
                ctx.fill();
                ctx.strokeStyle = m.c; ctx.lineWidth = 2; ctx.stroke();
                ctx.shadowBlur = 0;
            });
            
            animationId = requestAnimationFrame(animate);
        }

        function setMass(type) { nextMass = type; }
        
        function clearAll() {
            masses = [];
            if (animationId) { cancelAnimationFrame(animationId); animationId = null; }
            if (ctx) { ctx.fillStyle = '#000'; ctx.fillRect(0, 0, canvas.width, canvas.height); }
        }

        // E=mc¬≤ CALCULATOR
        function formatLargeNumber(num) {
            // Returns proper number names
            if (num >= 1e24) return (num / 1e24).toFixed(1) + ' septillion';
            if (num >= 1e21) return (num / 1e21).toFixed(1) + ' sextillion';
            if (num >= 1e18) return (num / 1e18).toFixed(1) + ' quintillion';
            if (num >= 1e15) return (num / 1e15).toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, ",") + ' quadrillion';
            if (num >= 1e12) return (num / 1e12).toFixed(1) + ' trillion';
            if (num >= 1e9) return (num / 1e9).toFixed(1) + ' billion';
            if (num >= 1e6) return (num / 1e6).toFixed(1) + ' million';
            return num.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        function calculateEnergy(objectName, massGrams, emoji) {
            const c = 299792458;
            const massKg = massGrams / 1000;
            const energy = massKg * c * c;
            
            document.getElementById('energyResult').style.display = 'block';
            document.getElementById('objectEmoji').textContent = emoji;
            document.getElementById('objectName').textContent = objectName;
            
            let energyText = '';
            if (energy >= 1e15) {
                energyText = (energy / 1e15).toFixed(2) + ' Petajoules (10¬π‚Åµ J)';
            } else if (energy >= 1e12) {
                energyText = (energy / 1e12).toFixed(2) + ' Terajoules (10¬π¬≤ J)';
            } else if (energy >= 1e9) {
                energyText = (energy / 1e9).toFixed(2) + ' Gigajoules (10‚Åπ J)';
            } else {
                energyText = energy.toExponential(2) + ' Joules';
            }
            document.getElementById('energyValue').textContent = energyText;

            // STEP BY STEP MATH
            let massDisplay = massGrams >= 1000 
                ? (massGrams/1000).toLocaleString() + ' kg' 
                : massGrams + ' g = ' + massKg + ' kg';

            let mathHTML = `
                <div style="background: #fffde7; padding: 10px; border-radius: 8px; margin-bottom: 8px;">
                    <strong>Step 1: Write the formula</strong><br>
                    E = m √ó c¬≤
                </div>
                <div style="background: #fffde7; padding: 10px; border-radius: 8px; margin-bottom: 8px;">
                    <strong>Step 2: Put in the mass</strong><br>
                    m = ${massDisplay}
                </div>
                <div style="background: #fffde7; padding: 10px; border-radius: 8px; margin-bottom: 8px;">
                    <strong>Step 3: Speed of light</strong><br>
                    c = 299,792,458 m/s<br>
                    c¬≤ = 89,875,517,873,681,764
                </div>
                <div style="background: #fff9c4; padding: 10px; border-radius: 8px; margin-bottom: 8px;">
                    <strong>Step 4: Multiply!</strong><br>
                    E = ${massKg} √ó 89,875,517,873,681,764
                </div>
                <div style="background: #fff176; padding: 10px; border-radius: 8px; font-weight: 800; color: #e65100;">
                    ‚úÖ Answer: ${energyText}
                </div>
            `;
            document.getElementById('mathSteps').innerHTML = mathHTML;
            
            // COMPARISONS
            const hiroshimaBomb = 63e12;
            const tntTon = 4.184e9;
            const householdYear = 11e9;
            const lightningBolt = 1e9;
            const totalEarthHomes = 2.3e9;

            const homesCanPower = energy / householdYear;
            const earthYears = homesCanPower / totalEarthHomes;

            let comparison = '';

            if (earthYears >= 1) {
                // Show how many years to power ALL Earth homes
                let yearText = '';
                if (earthYears >= 1e9) yearText = (earthYears / 1e9).toFixed(1) + ' billion years';
                else if (earthYears >= 1e6) yearText = (earthYears / 1e6).toFixed(1) + ' million years';
                else if (earthYears >= 1000) yearText = (earthYears / 1000).toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, ",") + ' thousand years';
                else yearText = earthYears.toFixed(1) + ' years';

                comparison += `üåç Power ALL homes on Earth for <strong>${yearText}!</strong><br>`;
                comparison += `üè† That's <strong>${formatLargeNumber(homesCanPower)}</strong> homes for a year<br>`;
                comparison += `üí£ ${formatLargeNumber(energy / hiroshimaBomb)} Hiroshima bombs`;
            } else if (homesCanPower >= 1e9) {
                comparison += `üè† ${formatLargeNumber(homesCanPower)} homes powered for a year<br>`;
                comparison += `üí£ ${formatLargeNumber(energy / hiroshimaBomb)} Hiroshima bombs<br>`;
                comparison += `‚ö° ${formatLargeNumber(energy / lightningBolt)} lightning bolts!`;
            } else if (homesCanPower >= 1e6) {
                comparison += `üè† ${formatLargeNumber(homesCanPower)} homes powered for a year<br>`;
                comparison += `üí• ${formatLargeNumber(energy / tntTon)} tons of TNT<br>`;
                comparison += `‚ö° ${formatLargeNumber(energy / lightningBolt)} lightning bolts!`;
            } else if (homesCanPower >= 1) {
                comparison += `üè† ${formatLargeNumber(homesCanPower)} homes for a year<br>`;
                comparison += `üí• ${formatLargeNumber(energy / tntTon)} tons of TNT<br>`;
                comparison += `‚ö° ${formatLargeNumber(energy / lightningBolt)} lightning bolts!`;
            } else {
                comparison += `üí• ${(energy / tntTon).toFixed(3)} tons of TNT<br>`;
                comparison += `üîã Charging ${formatLargeNumber(energy / 50000)} smartphones<br>`;
                comparison += `üí° Powering a bulb for ${(energy / 100 / 3600 / 24).toFixed(0)} days!`;
            }
            
            document.getElementById('comparison').innerHTML = comparison;
            document.getElementById('energyResult').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        // Close modal on click outside or Escape
        document.getElementById('discoveryModal').addEventListener('click', (e) => {
            if (e.target.id === 'discoveryModal') closeModal();
        });
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeModal();
        });
